@model List<Pizza>

<div class="container">
    <div class="text-center">
        <h1 class="display-4">Pizza Buona</h1>
        <h4>Miglior pizzeria del Mondo</h4>
        <div class="py-5"></div>
        <div class="row row-cols-1 row-cols-md-2 g-4">
            @foreach(Pizza pizza in Model){
                <div class="col">
                    <div class="card">
                        <img src="@pizza.Image" class="card-img-top"
                         alt="@pizza.Name" />
                        <div class="card-body">
                            <h5 class="card-title">@pizza.Name</h5>
                            <p class="card-text">
                                @pizza.Description
                            </p>
                            <p class="card-text">
                                Prezzo: @pizza.Price €
                            </p>
                        </div>
                    </div>
                </div>
            }
            
        </div>
    </div>
</div>